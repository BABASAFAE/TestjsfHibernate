<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.entities">
<class name="com.entities.Product" table="product">

<id name="id" type="java.lang.Integer"> 

<column name="id" />

</id>
<property name="name" type="java.lang.String" >

<column name="name" sql-type="varchar(250)" not-null="true" />
            </property>
            
<property name="price" type="java.math.BigDecimal">

<column name="price" sql-type="decimal(10,1))" not-null="true" />
            </property>
            
 <property name="quantity"  type="java.lang.Integer">
 
<column name="quantity" sql-type="int(11)" not-null="true" />
            </property>
            
<property name="description" type="java.lang.String" >


<column name="description" sql-type="text" not-null="true" />
            </property>
            
<property name="status" type="java.lang.Boolean" >


<column name="status" sql-type="tinyint(1)" not-null="true" />
            </property>
            

</class>

</hibernate-mapping>




